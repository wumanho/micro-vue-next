{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "DOM",
      "es6",
      "es2016"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "types": [
      "jest"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@micro-vue-next/*": [
        "./packages/*/src"
      ]
    }
  },
  "include": [
    "packages/*/src",
    "packages/*/__test__"
  ]
}
